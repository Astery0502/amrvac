!=====================================================
!> Project : Advection test
!>   Doing discontinuous 2D VAC logo on periodic square
!>      exploit dynamic AMR, fourstep scheme, 
!>              HLLC with Koren limiter (hence 2 ghost cell layers)
!> $AMRVAC_DIR/setup.pl -d=22 -g=14,14 -p=rho
!=====================================================
 &testlist
        teststr=' '
/

 &filelist
        filenameout='vachllcko'
        filenamelog='vachllcko'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/
 &savelist
        dtsave(5)=1.0d-2
 /

 &stoplist
        tmax=0.1d0
 /

 &methodlist
        wnames=       'rho'
        fileheadout=  'test_rho22'
        typeadvance=  'fourstep'
        typefull1 =    13*'hllc'
        typelimiter1=  13*'koren'
 /

 &boundlist
        dixB=   2
        typeB=  'periodic','periodic','periodic','periodic'
 /

 &amrlist
        mxnest=4
        tol=13*0.1d0
        nxlone1=50
        nxlone2=50
        iprob=3
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
       courantpar=0.90
 /
