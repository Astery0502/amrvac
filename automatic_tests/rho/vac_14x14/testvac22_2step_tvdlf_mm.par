!=====================================================
!> Project : Advection test
!>   Doing discontinuous 2D VAC logo on periodic square
!>      exploit dynamic AMR, multi-step predictor-corrector scheme, 
!>              Hancock/TVDLF with minmod limiter (hence 2 ghost cell layers)
!>              reduced CFL to 0.45
!> $AMRVAC_DIR/setup.pl -d=22 -g=14,14 -p=rho
!=====================================================
 &testlist
        teststr=' '
/

 &filelist
        filenameout='vacPCtvdlf'
        filenamelog='vacPCtvdlf'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/
 &savelist
        dtsave(5)=1.0d-2
 /

 &stoplist
        tmax=0.1d0
 /

 &methodlist
        wnames=       'rho'
        fileheadout=  'test_rho22'
        typeadvance=  'twostep'
        typefull1 =    13*'tvdlf'
        typepred1 =    13*'hancock'
        typelimiter1=  13*'minmod'
 /

 &boundlist
        dixB=   2
        typeB=  'periodic','periodic','periodic','periodic'
 /

 &amrlist
        mxnest=4
        tol=13*0.1d0
        nxlone1=50
        nxlone2=50
        iprob=3
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
       courantpar=0.45
 /
