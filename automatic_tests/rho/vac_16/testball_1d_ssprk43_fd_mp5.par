!=====================================================
!> Project : Advection test
!>   Doing discontinuous 1D ball on periodic domain
!>      exploit dynamic AMR, multi-step ssprk43 scheme, 
!>              conservative finite difference scheme,
!>              mp5 limiter (hence 3 ghost cell layers)
!>              CFL 0.6 ok (CFL 0.9 unstable!)
!> $AMRVAC_DIR/setup.pl -d=11 -g=16 -p=rho
!=====================================================
 &testlist
        teststr=' '
/

 &filelist
        filenameout='vacssp43fd'
        filenamelog='testball_1d_ssprk43_fd_mp5'
        typefilelog='regression_test'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        dtsave(1)=1.0d-2
 /

 &stoplist
        tmax=0.1d0
 /

 &methodlist
        wnames=       'rho'
        fileheadout=  'test_ball_1d'
        typeadvance=  'ssprk43'
        typefull1 =    13*'fd'
        typelimiter1=  13*'mp5'
 /

 &boundlist
        dixB=   3
        typeB=  'periodic','periodic'
 /

 &amrlist
        mxnest=4
        tol=13*0.1d0
        nxlone1=50
        iprob=6
        xprobmin1=0.0d0
        xprobmax1=1.0d0
 /

 &paramlist
       courantpar=0.60
 /
