!=====================================================
! Project : Prominence RT dynamics, 2.5D case
! Aim     : MHD evolution in stratified atmosphere
! Results :
! Update  : 1/09/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=23 -phi=0 -z=0 -g=14,14 -p=mhd -eos=default -nf=1 -ndust=0 -u=nul -arch=default
!=====================================================

 &testlist
 /

 &filelist
        filenamelog='promRTtwod'
        filenameout='promRTtwod'
        primnames= 'rho v1 v2 v3 p b1 b2 b3 psi tr'
        typefilelog='regression_test'
        autoconvert=.true.
        saveprim=.true.
        convert_type='vtuBmpi'
        nwauxio=2
        typeparIO=-1
 /
        convert_type='user'

 &savelist
        dtsave(1)     = 1.0d-3
 /

 &stoplist
        dtmin=1.D-6
        tmax=5.0d-2
 /

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3 psi tr'
        fileheadout=  'promRT_mhd23'
        typeadvance=  'threestep'
        typefull1=    13*'hll'
        typepred1=    13*'hll'
        typelimiter1= 13*'koren'
        typelimited='predictor'
        dimsplit=.false.
        ssplitdivb=.true.
        typedivbfix='glm2'
        ssplituser=.false.
        fixsmall=.true.
        strictsmall=.false.
        strictgetaux=.false.
        nflatgetaux=4
        smallp=1.0d-14
        smallrho=1.0d-14
 /

 &boundlist
        dixB=    2
        typeB=   10*'periodic',10*'periodic',
                 10*'special',10*'special'
 /

 &amrlist
        errorestimate=3
        mxnest=3
        nbufferx1=0
        nbufferx2=0
        tol=13*0.2d0
        tolratio=13*0.1d0
        nxlone1=20
        nxlone2=20
        xprobmin1=0.0d0
        xprobmax1=3.0d0
        xprobmin2=0.0d0
        xprobmax2=3.0d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.8d0
 /
