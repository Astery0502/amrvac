! Project : 2D Richtmyer-Meshkov without dust
! Aim     : 
! Results :
! Update  : 31/08/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=22 -phi=0 -z=0 -g=14,14 -p=hd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
	filenamelog='rimhd'
	filenameout='rimhd'
        primnames= 'rho v1 v2 p'
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
	nwauxio=1
        typeparIO=-1
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
	ditsave(1)=50
        dtsave(2)=0.01
 /

 &stoplist
        tmax=2.0d0
 /

 &methodlist
        wnames=       'rho m1 m2 e'
        fileheadout=  'nodustrm_hd22'
        typeadvance=  'ssprk54'
        typefull1=   13*'hll'
        typelimiter1=13*'koren'
        dimsplit=.false.
 /

 &boundlist
        dixB=2
        typeB=4*'cont', 4*'cont',
	'symm','symm','asymm','symm',
        'symm','symm','asymm','symm',
 /

 &amrlist
        errorestimate=3
        mxnest=6
	flags(5)=2
	flags(1)=1
	flags(2)=2
	wflags(1)=0.8d0
	wflags(2)=0.2d0
	tol=13*0.05
	tolratio=13*0.125d0
        nxlone1=160
        nxlone2=40
        xprobmin1=0.0d0
        xprobmax1=4.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        slowsteps=10
        courantpar=1.5d0
 /
