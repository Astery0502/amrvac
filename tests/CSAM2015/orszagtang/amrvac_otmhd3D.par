!=====================================================
! Project : Orszag-Tang
! Aim     : shock-dominated MHD evolution, 3D setup
! Results :
! Update  : 1/09/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=33 -phi=0 -z=0 -g=14,14,14 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        filenameout   = 'otmhd3D'
        filenamelog   = 'otmhd3D'
        primnames     =  'rho v1 v2 v3 pth b1 b2 b3'
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        convert_type='vtuBmpi'
        typeparIO=-1
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave(1)    = 100
        dtsave(2)     = 0.2
 /

 &stoplist
        tmax          = 3.2d0
 /

 &methodlist
        wnames        = 'rho m1 m2 m3 e b1 b2 b3'
        fileheadout   = 'ot_mhd33'
        typeadvance   = 'fourstep'
        typefull1     = 13*'hll'
        typelimiter1  = 13*'cada3'
        useprimitive  = .true.
        typedivbfix   = 'linde'
 /

 &boundlist
        dixB          = 2
        typeB         = 8*'periodic',8*'periodic',
                        8*'periodic',8*'periodic',
                        8*'periodic',8*'periodic'
 /

 &amrlist
        errorestimate = 3
        mxnest        = 1
    	tol           = 13*0.2d0
        nxlone1       = 100
        nxlone2       = 100
        nxlone3       = 100
        xprobmin1     = 0.0d0
        xprobmax1     = 6.2831853071795865d0
        xprobmin2     = 0.0d0
        xprobmax2     = 6.2831853071795865d0
        xprobmin3     = 0.0d0
        xprobmax3     = 6.2831853071795865d0
 /

 &paramlist
        courantpar    = 0.8d0
 /
