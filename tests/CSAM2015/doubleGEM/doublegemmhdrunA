 &filelist
        filenamelog='doublegemmhdrunA'
        filenameout='doublegemmhdrunA'
        typefilelog='special'
        primnames='rho v1 v2 v3 pth b1 b2 b3 psi'
        autoconvert=.true.
        saveprim=.true.
        convert_type='vtuBmpi'
        nwauxio=3
        typeparIO=-1
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        ditsave(1)=100
        dtsave(2)=1.0d0
 /

 &stoplist
        dtmin=1.D-6
        tmax=100.0d0
 /

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3 psi'
        fileheadout=  'doublegem_mhd23'
        typeadvance=  'ssprk54'
        typefull1=    13*'fd'
        typelimiter1= 13*'mp5'
        typedivbfix='glm3'
        ssplitresis=.true.
        compactres=.true.
 /

 &boundlist
        dixB=    4
        typeB=   9*'periodic',9*'periodic',
                 9*'periodic',9*'periodic'
 /

 &amrlist
        errorestimate=3
        mxnest=4
        nbufferx1=0
        nbufferx2=0
        tol=13*0.2d0
        tolratio=13*0.1d0
        nxlone1=60
        nxlone2=60
        xprobmin1=-15.0d0
        xprobmax1=15.d0
        xprobmin2=-15.0d0
        xprobmax2=15.d0
        iprob=1
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.9d0
        dtdiffpar=0.4d0
 /
