!=====================================================
! Project : 2D HD shock cloud, AMR
! Aim     : Shin et al ApJ 680, 2008
! Results :
! Update  : 05/09/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=22 -phi=0 -z=0 -g=16,16 -p=hd -eos=default -nf=1 -ndust=4 -u=nul -arch=default
!=====================================================

 &filelist
        filenamelog='inlet'
        filenameout='./output/jetCloud'
        primnames='rho v1 v2 p tr'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
        !writew=9*.T.,8*.T.
	filenameini='./output/jetCloud'
 /
	snapshotini=120
        snapshotnext=121
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
	dtsave(1)=0.05
        dtsave(2)=0.1d0
 /

 &stoplist
        dtmin=1.D-9
        tmax=10.0d0
	!itmax=10
 /

 &methodlist
        wnames= 'rho m1 m2 e tr1'
        fileheadout=  'inlet'
        typeadvance=  'ssprk54'
        typefull1=    13*'hllc'
        typepred1=    13*'hllc'
        typelimiter1= 13*'mp5'
        typelimited='predictor'
        useprimitive=.true.
        
        dimsplit=.false.
        fixsmall=.true.
        strictsmall=.false.
        strictgetaux=.false.
        nflatgetaux=2
        smallp=1.0d-5
        smallrho=1.0d-6
	strictzero = .T.
 /

 &boundlist
        dixB=    3
        typeB=   5*'special',5*'cont',
                 5*'noinflow',5*'noinflow'
 /

 &amrlist
        errorestimate=3
        mxnest=2
	flags(6)=1
        flags(1)=1
	!flags(2)=2
	wflags(1)=1.0
	!wflags(2)=0.5
        nbufferx1=0
        nbufferx2=0
        tol=13*0.3d0
        tolratio=13*0.3d0
        nxlone1=160
        nxlone2=80
        xprobmin1=-12.0d0
        xprobmax1=20.0d0
        xprobmin2=-10.0d0
        xprobmax2=6.0d0
        iprob=1
 /

 &paramlist
        slowsteps=100
        typecourant='maxsum'
        courantpar=0.8d0
        dtdiffpar=0.9d0
 /
