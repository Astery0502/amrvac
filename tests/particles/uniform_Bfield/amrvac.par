 &filelist
        autoconvert   = T
        saveprim      = T
        nwauxio       = 0
        base_filename = 'output/ot_2d'
        ! convert = .true.
        convert_type  = 'vtuBmpi'
        ! restart_from_file='output/ot_2d0000.dat'
 /
        restart_from_file='ot_2d0004.dat'
        snapshotnext=5

 &savelist
        ! itsave(1,1)   = 0
        ! itsave(1,2)   = 0
        ditsave_log   = 1
        dtsave_dat    = 1.0d0
        time_between_print = 10.0
 /

 &stoplist
        time_max      = 100.0
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 8*'periodic'
        typeboundary_min2  = 8*'periodic'
        typeboundary_min3  = 8*'periodic'
        typeboundary_max1  = 8*'periodic'
        typeboundary_max2  = 8*'periodic'
        typeboundary_max3  = 8*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 1
    	! refine_threshold = 20*0.4d0
        ! w_refine_weight(1)=0.5d0
        ! w_refine_weight(5)=0.5d0
        domain_nx1    = 16
        domain_nx2    = 16
        domain_nx3    = 16
        xprobmin1     = -5.0d8
        xprobmax1     = 5.0d8
        xprobmin2     = -5.0d8
        xprobmax2     = 5.0d8
        xprobmin3     = -5.0d8
        xprobmax3     = 5.0d8
 /

 &paramlist
        courantpar    = 0.8d0
 /

 &mhd_list
        typedivbfix   = 'linde'
        mhd_particles = .true.
 /

 &particles_list
        physics_type_particles='Lorentz'
        num_particles=1
        dtsave_ensemble=1.0d0
        npayload=1
        particles_eta=0.0d-4
 /

 &my_list
        init_gammav_SI = 1.0 0.0 0.0
        Efield_SI = 0.0 0.0 1.0
        Bfield_SI = 0.0 0.0 1.0
 /