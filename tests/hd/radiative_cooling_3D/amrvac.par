
&filelist
  filenameout      = 'a_rc_hd_a'
  primnames        = 'rho v1 v2 v3 p'
  autoconvert      = T
  convert_type     = 'vtuBCCmpi'
  saveprim         = T
/

&savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   ditsave(1)      = 1
   dtsave(2)       = 1.d-1
/

&stoplist
   tmax            = 5.d-1
/

&methodlist
   wnames          = 'rho m1 m2 m3 e'
   fileheadout     = '3Dhd'
   typeadvance     = 'threestep'
   typefull1       = 13*'hllc'
   typelimiter1    = 13*'cada3'
   useprimitive    = T
/   
&boundlist
  dixB  = 2
  typeB = 5*'cont', 5*'cont', 5*'cont', 5*'cont', 5*'cont', 5*'cont'
/
&amrlist
   errorestimate   = 3
   mxnest          = 3
   nxblock1        = 4
   nxblock2        = 4
   nxblock3        = 4
   nxlone1         = 8
   nxlone2         = 8
   nxlone3         = 8
   xprobmin1       =-1.0d0
   xprobmax1       = 1.0d0
   xprobmin2       =-1.0d0
   xprobmax2       = 1.0d0
   xprobmin3       =-1.0d0
   xprobmax3       = 1.0d0
 /
  
&paramlist
  slowsteps        = 10
  courantpar       = 0.6d0
  typecourant      = 'maxsum'
/

&hd_list
  hd_radiative_cooling=T
/
 
