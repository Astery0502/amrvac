!setup.pl -d=22 -g=16,16 -p=hd

 &filelist
        primnames= 'rho v1 v2 p'
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
        filenameout='rm_2d_'  ! Base file name for dat/vtu output
        filenamelog='rm_2d'   ! Base file name for the log
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave(1)=0.05          ! For the log
        dtsave(2)=0.05          ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        tmax=5.0d0
 /

 &methodlist
        wnames=       'rho m1 m2 e'
        fileheadout=  'hd22'
        typeadvance=  'threestep'
        typefull1=13*'hllc'
        typelimiter1='cada3'

 /

 &boundlist
        dixB=2
        typeB=4*'cont',4*'cont',4*'cont',4*'cont'
 /

 &amrlist
        errorestimate=3
        mxnest=2
        nxlone1=128
        nxlone2=128
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.9d0
        slowsteps=10
 /
