!=====================================================
! Project : 3D Jet cloud
! Aim     : de Gouveia dal Pino, ApJ 526, 826 (1999)
! Results :
! Update  : 31/08/2015
! configuration :
! $AMRVAC_DIR/setup.pl -d=33 -phi=0 -z=0 -g=16,16,16 -p=hd -eos=default -nf=1 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        base_filename='jetCloud3D'
        primnames='rho v1 v2 v3 p tr'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBmpi'
        typeparIO=-1
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
	dtsave_log=0.05
        dtsave_dat=0.5d0
 /

 &stoplist
        dtmin=1.D-9
        itmax=100
 /
        time_max=6.0d0

 &methodlist
        w_names= 'rho m1 m2 m3 e tr'
        time_integrator=  'ssprk54'
        flux_scheme=    20*'hllc'
        typepred1=    20*'hllc'
        limiter= 20*'mp5'
        typelimited='predictor'        dimsplit=.false.
        fixsmall=.true.
        strictsmall=.false.
        strictgetaux=.false.
        nflatgetaux=2
        small_pressure=1.0d-14
        small_density=1.0d-14
 /

 &boundlist
        nghostcells=    3
        typeboundary_min1 = 6*'special'
        typeboundary_max1 = 6*'cont'
        typeboundary_min2 = 6*'noinflow'
        typeboundary_max2 = 6*'noinflow'
        typeboundary_min3 = 6*'noinflow'
        typeboundary_max3 = 6*'noinflow'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=1
	w_for_refine(7)=2
        w_for_refine(1)=1
	w_for_refine(2)=2
	w_refine_weight(1)=0.8
	w_refine_weight(2)=0.2
        nbufferx1=0
        nbufferx2=0
        nbufferx3=0
        refine_threshold=20*0.3d0
        derefine_ratio=20*0.3d0
        domain_nx1=160
        domain_nx2=60
	domain_nx3=60
        xprobmin1=-16.0d0
        xprobmax1=16.0d0
        xprobmin2=-6.0d0
        xprobmax2=6.0d0
	xprobmin3=-6.0d0
        xprobmax3=6.0d0
        iprob=1
 /

 &paramlist
        slowsteps=100
        typecourant='maxsum'
        courantpar=0.8d0
 /
