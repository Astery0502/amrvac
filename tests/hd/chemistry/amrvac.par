!setup.pl -d=2

 &filelist
   base_filename    = 'output/chem'
   autoconvert      = .true.
   convert_type     = 'vtuBCCmpi'
   saveprim         = .true.
 /

 &savelist
   tsave_dat(1) = 0.0d0
   dtsave_log       = 5.0d-2
   dtsave_dat       = 5.0d-2
/

 &stoplist
   time_max            = 1.0d0
/

 &methodlist
   fixprocess = .true.
   time_integrator     = 'twostep'
   flux_scheme       = 20*'tvdlf'
   limiter    = 20*'koren'
   source_split_usr = .true.
   typesourcesplit = 'sfs'
/

 &boundlist
  typeboundary_min1 = 6*'periodic'
  typeboundary_max1 = 6*'periodic'
  typeboundary_min2 = 6*'periodic'
  typeboundary_max2 = 6*'periodic'
/
 &meshlist
   refine_criterion = 3
   refine_max_level = 1
   block_nx1        = 16
   block_nx2        = 16
   domain_nx1       = 64
   domain_nx2       = 64
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
 /

 &hd_list
   hd_n_tracer = 2
 /