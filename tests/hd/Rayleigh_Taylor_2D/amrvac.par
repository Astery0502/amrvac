!setup.pl -d=3

&filelist
  primnames        = 'rho v1 v2 p'
  base_filename      = 'rthd_2d'
  autoconvert      = .true.
  convert_type     = 'vtuBCCmpi'
  saveprim         = .true.
/

 &savelist
   dtsave_log       = 1.d-3
   dtsave_dat       = 1.d-1
/

 &stoplist
   time_max            = 2.d0
/

 &methodlist
   w_names          = 'rho m1 m2 e'
   fileheadout     = 'rt_2d'
   time_integrator     = 'threestep'
   flux_scheme       = 20*'hllc'
   limiter    = 20*'cada3'
/

 &boundlist
  nghostcells  =   2
  typeboundary =         4*'periodic', 4*'periodic',
                 'symm','symm','asymm','symm',
                 'symm','symm','asymm','symm'
/
 &meshlist
   refine_criterion   = 3
   refine_max_level          = 5
   block_nx1        = 4
   block_nx2        = 4
   domain_nx1         = 8
   domain_nx2         = 8
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
 /

 &paramlist
  slowsteps        = 10
 /

 &hd_list
  hd_gravity = .true.
 /
