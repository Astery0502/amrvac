!=====================================================
! Project : 3D MHD shock cloud, AMR
! Aim     : Shin et al ApJ 680, 2008
! Results :
! Update  : 14/08/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=33 -phi=0 -z=0 -g=16,16,16 -p=mhd -eos=default -nf=1 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        filenamelog='SCmhd3Dbetaone'
        filenameout='SCmhd3Dbetaone'
        primnames='rho v1 v2 v3 p b1 b2 b3 tr'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuCCmpi'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.01d0,0.05d0
 /

 &stoplist
        dtmin=1.D-6
        tmax=1.0d0
 /

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3 tr1'
        fileheadout=  'SC_mhd33'
        typeadvance=  'threestep'
        typefull1=    13*'hll'
        typepred1=    13*'hll'
        typelimiter1= 13*'mp5'
        typelimited='predictor'
        useprimitive=.true.
        dimsplit=.false.
        typedivbfix='linde'
        divbdiff=1.0d0
        ssplitdivb=.true.
 /
        fixsmall=.true.
        strictsmall=.true.
        strictgetaux=.false.
        nflatgetaux=2
        smallp=1.0d-14
        smallrho=1.0d-14

 &boundlist
        dixB=    3
        typeB=   9*'special',9*'cont',
                 9*'cont',9*'cont',
                 9*'cont',9*'cont'
 /

 &amrlist
        errorestimate=3
        mxnest=1
        nbufferx1=0
        nbufferx2=0
        nbufferx3=0
        flags(10)=4
        flags(1)=1
        flags(2)=6
        flags(3)=7
        flags(4)=9
        wflags(1)=0.6d0
        wflags(2)=0.1d0
        wflags(3)=0.1d0
        wflags(4)=0.2d0
        tol=13*0.2d0
        tolratio=13*0.125d0
        nxlone1=100
        nxlone2=100
        nxlone3=100
        xprobmin1=-3.66d0
        xprobmax1=6.34d0
        xprobmin2=-5.0d0
        xprobmax2=5.0d0
        xprobmin3=-5.0d0
        xprobmax3=5.0d0
        iprob=1
 /

 &paramlist
        slowsteps=100
        typecourant='maxsum'
        courantpar=0.4d0
        dtdiffpar=0.4d0
 /
