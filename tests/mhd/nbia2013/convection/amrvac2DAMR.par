!=====================================================
! Project : 2D MHD convection, with AMR
! Aim     : Hurlburt-Toomre setup
! Results :
! Update  : 14/08/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=22 -phi=0 -z=0 -g=14,14 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        filenamelog='mhdconvectAMR'
        filenameout='mhdconvectAMR'
        primnames='rho v1 v2 p b1 b2'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuCCmpi'
        nwauxio=5
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.1d0,1.d0
 /

 &stoplist
        dtmin=1.D-6
        tmax=60.d0
 /

 &methodlist
        wnames=       'rho m1 m2 e b1 b2'
        fileheadout=  'conv_mhd22'
        typeadvance=  'threestep'
        typefull1=    13*'hll'
        typepred1=    13*'hll'
        typelimiter1= 13*'cada3'
        typelimited='predictor'
        useprimitive=.true.
        dimsplit=.false.
        typedivbfix='linde'
        divbdiff=1.0d0
        ssplitdivb=.true.
        compactres=.true.
 /

 &boundlist
        dixB=    2
        typeB=   6*'periodic',6*'periodic',
                 6*'special',6*'special'
 /

 &amrlist
        errorestimate=3
        mxnest=4
        nbufferx1=0
        nbufferx2=0
        flags(7)=3
        flags(1)=1
        flags(2)=5
        flags(3)=6
        wflags(1)=0.6d0
        wflags(2)=0.2d0
        wflags(3)=0.2d0
        tol=13*0.2d0
        tolratio=13*0.125d0
        nxlone1=60
        nxlone2=20
        xprobmin1=0.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=1.d0
        iprob=1
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.9d0
        dtdiffpar=0.4d0
 /
