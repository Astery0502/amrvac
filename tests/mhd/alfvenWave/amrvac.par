!=====================================================
! Project : 2D MHD convection
! Aim     : Hurlburt-Toomre setup
! Results :
! Update  : 14/08/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=11 -phi=0 -z=0 -g=14 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        primnames='rho v1 v2 v3 p b1 b2 b3'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
	filenameout = 'mp5_'
	filenameini = 'mp5_'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.1d0,0.1d0
 /

 &stoplist
        dtmin=1.D-6
        tmax=10.d0
 /

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3'
        fileheadout=  'alfvenWave_mhd13'
        typeadvance=  'threestep'
        typefull1=    13*'hllc'
        typepred1=    13*'hllc'
        typelimiter1= 13*'mp5'
        typelimited='predictor'
        useprimitive=.true.
        dimsplit=.false.
        typedivbfix='linde'
        divbdiff=1.0d0
        ssplitdivB=.true.
 /

 &boundlist
        dixB=    4
        typeB=   8*'periodic',8*'periodic'
 /

 &amrlist
        errorestimate=3
        mxnest=1
        flags(9)=2
        flags(1)=7
        flags(2)=8
        wflags(1)=0.5d0
        wflags(2)=0.5d0
        tol=13*0.2d0
        tolratio=13*0.125d0
        nxlone1=120
        xprobmin1=0.d0
        xprobmax1=1.d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.9d0
 /
