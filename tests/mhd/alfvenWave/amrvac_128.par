!=====================================================
! Project : 2D MHD circularly polarised Alfven wave propagation
! Aim     : multi-D non-linear code test, e.g. to investigate convergence
! Results :
! Update  : 26/08/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=23 -phi=0 -z=0 -g=16,16 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        primnames='rho v1 v2 v3 p b1 b2 b3 psi'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtiCCmpi'
	filenameout = 'rk54_glm_global_fd_mp5_128_'
	filenameini = 'rk54_glm_global_fd_mp5_128_'
	filenamelog = 'rk54_glm_global_fd_mp5_128'
 /

 &savelist
        itsave(1,1)  = 0
        itsave(1,2)  = 0
        ditsave(1)   = 1
!	dtsave(2)    = 0.44721359549995793
 /

 &stoplist
        dtmin        = 1.D-6
        tmax         = 0.44721359549995793
 /

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3 psi'
        fileheadout=  'alfvenWave_mhd23'
        typeadvance=  'ssprk54'
        typefull1 =    13*'fd'
        typepred1 =    13*'fd'
        typelow1  =    13*'fd'
        typelimiter1= 13*'mp5'
        typelimited='predictor'
        typedivbfix       = 'glm3'
 /

 &boundlist
        dixB=    3
        typeB=   9*'periodic',9*'periodic',
	         9*'periodic',9*'periodic'
 /

 &amrlist
        errorestimate=0
        mxnest=1
        tol=13*0.2d0
        tolratio=13*0.125d0
        nxlone1=128
        nxlone2=64
        xprobmin1=0.d0
        xprobmax1=1.d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.4d0
 /
