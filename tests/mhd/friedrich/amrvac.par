!=====================================================
! Project : Friedrich diagram (Hall configuration)
! Aim     : Create a group diagram for Hall MHD waves
! Results : 
! Update  : 29/04/2013
! configuration :
! $AMVRAC_DIR/setup.pl -d=23 -phi=0 -z=0 -g=20,20 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

&filelist
        primnames          = 'rho v1 v2 v3 p b1 b2 b3 psi'
        saveprim           = .true.
        autoconvert        = .true.
/

 &savelist
        itsave(1,1)  = 0
        itsave(1,2)  = 0
        ditsave(1)   = 1
        dtsave(2)    = 0.01
/

 &stoplist
        tmax=1
/

 &methodlist
        wnames       = 'd s1 s2 s3 e b1 b2 b3 psi'
        fileheadout  = 'Friedrichdiagram'
        typeadvance  = 'threestep'
        typefull1    = 13*'tvdlf'
        typelimiter1 = 13*'mp5'
        typediv      = 'limited'
        typegrad     = 'limited'
        compactres   = T
        typedivbfix  = 'glm3'
        halldampen   = 1.
/

&boundlist
        dixB         = 4
        typeB        = 9*'cont',9*'cont',9*'cont',9*'cont'
/

 &amrlist
        errorestimate   = 3
        flags(10)       = 3
        flags(1)        = 2
        flags(2)        = 3
        flags(3)        = 4
        wflags(1)       = 0.3
        wflags(2)       = 0.3
        wflags(3)       = 0.4
        mxnest          = 5
        tol             = 13*0.01d0
        amr_wavefilter  = 1e-4
        nxlone1         = 120
        nxlone2         = 120
        xprobmin1       =-1.0d0
        xprobmax1       = 1.0d0
        xprobmin2       =-1.0d0
        xprobmax2       = 1.0d0
        prolongprimitive= T 
        coarsenprimitive= T
/

 &paramlist
       slowsteps        = 10
       courantpar       = 0.6d0
       dtdiffpar        = 0.5d0
/
