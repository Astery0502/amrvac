!setup.pl -d=2 
 &filelist
	base_filename='bw_2d'
        typefilelog='regression_test'
        autoconvert=.true.
        saveprim=.true.
        nwauxio=3
	convert_type='vtuBCCmpi'
 /

 &savelist
        dtsave_log=1.d-3
 /

 &stoplist
        time_max=5.d-2
 /

 &methodlist
        time_integrator='threestep'
        flux_scheme=20*'hll'
        limiter=20*'koren'
 /

 &boundlist
        typeboundary_min1=6*'cont'
        typeboundary_max1=6*'cont'
        typeboundary_min2=6*'periodic'
        typeboundary_max2=6*'periodic'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_for_refine(7)=2
        w_for_refine(1)=1
        w_for_refine(2)=4
        w_refine_weight(1)=0.5
        w_refine_weight(2)=0.5
        block_nx1=16
        block_nx2=16
        domain_nx1=32
        domain_nx2=32
        xprobmin1=0.1d0
        xprobmax1=2.1d0
        xprobmin2=0.d0
        xprobmax2=1.d0
        stretched_grid=.true.
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &mhd_list
        Busr=1.d0
 /
