!==============================================================
! Project : 2.5D MHD solar atmosphere in bipolar magnetic field
! Aim     : serve as a basic model for solar applications
! Results :
! Update  : 13/09/2016
! configuration :
! $AMRVAC_DIR/setup.pl -d=23 -phi=0 -z=0 -g=16,16 -p=mhd
!==============================================================

 &filelist
        filenamelog='solar_atm_25D'
        filenameout='solar_atm_25D'
        typefilelog='regression_test'
        primnames='rho v1 v2 v3 p b1 b2 b3'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
        nwauxio=9
        typeparIO=-1
 /
        filenameini='solar_atm_25D'
        snapshotini=0
        snapshotnext=1
        convert=.true.

 &savelist
        !itsave(1,1)=0
        !itsave(1,2)=0
        !ditsave=1,50
        ditsave(1) = 1
 /
        dtsave=0.1d0,2.d0

 &stoplist
        dtmin=1.D-7
        itmax=100
 /
        tmax=80.d0
        itreset=.true.
        treset=.true.

 &methodlist
        wnames=       'rho m1 m2 m3 e b1 b2 b3'
        fileheadout=  'prom_mhd23'
        typeadvance=  'threestep'
        typefull1=    13*'hll'
        typelimiter1= 13*'cada3'
        typelimited='predictor'
        dimsplit=.false.
        ssplitdivb=.true.
        typedivbfix='linde'
        ncool=4000
        coolmethod='exact'
        coolcurve='JCcorona'
        Tfix=.true.
        strictsmall=.true.
        strictgetaux=.false.
        nflatgetaux=2
        smallp=1.0d-8
        smallrho=1.0d-14
        conduction=.true.
 /
        fixsmall=.true.

 &boundlist
        dixB=    2
        typeB=	 'symm','asymm','symm','asymm','symm','asymm','symm','asymm',
                 'symm','asymm','symm','asymm','symm','asymm','symm','asymm',
                 8*'special',8*'special'
 /

 &amrlist
        errorestimate=3
        mxnest=4
        tol=13*0.2d0
        tolratio=13*0.15d0
        flags(9)=4
        flags(1)=1
        flags(2)=6
        flags(3)=7
        flags(4)=8
        wflags(1)=0.4d0
        wflags(2)=0.2d0
        wflags(3)=0.2d0
        wflags(4)=0.2d0
        nxlone1=96
        nxlone2=96
        iprob=1
        xprobmin1=-3.d0
        xprobmax1=3.d0
        xprobmin2=0.d0
        xprobmax2=6.d0
        ditregrid=3
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /
