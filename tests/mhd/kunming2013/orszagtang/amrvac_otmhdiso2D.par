!=====================================================
! Project : Orszag-Tang
! Aim     : shock-dominated MHD evolution, isothermal MHD
! Results :
! Update  : 11/07/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=22 -phi=0 -z=0 -g=16,16 -p=mhd -eos=iso -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

 &filelist
        primnames     =  'rho v1 v2 b1 b2'
        autoconvert   = T
        saveprim      = T
        nwauxio       = 2
        filenameout   = 'otmhdiso2D'
        filenamelog   = 'otmhdiso2D'
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave(1)    = 10
        dtsave(2)     = 0.1
 /

 &stoplist
        tmax          = 3.4d0
 /

 &methodlist
        wnames        = 'rho m1 m2 b1 b2'
        fileheadout   = 'ot_mhdiso22'
        typeadvance   = 'threestep'
        typefull1     = 13*'hll'
        typelimiter1  = 13*'mp5'
        useprimitive  = .true.
        typedivbfix   = 'linde'
 /

 &boundlist
        dixB          = 3
        typeB         = 5*'periodic',5*'periodic',
                        5*'periodic',5*'periodic'
 /

 &amrlist
        mxnest        = 4
        errorestimate = 3
    	tol           = 13*0.2d0
        nxlone1       = 50
        nxlone2       = 50
        xprobmin1     = 0.0d0
        xprobmax1     = 6.2831853071795865d0
        xprobmin2     = 0.0d0
        xprobmax2     = 6.2831853071795865d0
 /

 &paramlist
        courantpar    = 0.8d0
 /
