!=====================================================
! Project : Friedrich diagram 
! Aim     : Create a group diagram for MHD waves
! Results : 
! Update  : 11/07/2013
! configuration :
! $AMRVAC_DIR/setup.pl -d=23 -phi=0 -z=0 -g=16,16 -p=mhd -eos=default -nf=0 -ndust=0 -u=nul -arch=default
!=====================================================

&filelist
        filenameout        ='friedrichB'
        filenamelog        ='friedrichB'
        primnames          = 'rho v1 v2 v3 p b1 b2 b3'
        saveprim           = .true.
        autoconvert        = .true.
        nwauxio            = 1
/

 &savelist
        itsave(1,1)  = 0
        itsave(1,2)  = 0
        ditsave(1)   = 10
        dtsave(2)    = 0.01
/

 &stoplist
        tmax=0.5
/

 &methodlist
        wnames       = 'rho m1 m2 m3 e b1 b2 b3'
        fileheadout  = 'Friedrichdiagram'
        typeadvance  = 'threestep'
        typefull1    = 13*'tvdlf'
        typepred1    = 13*'tvdlf'
        typelimiter1 = 13*'cada3'
        typelimited  = 'predictor'
        useprimitive = .true.
        typedivbfix  = 'linde'
/

&boundlist
        dixB         = 2
        typeB        = 8*'cont',8*'cont',8*'cont',8*'cont'
/

 &amrlist
        errorestimate   = 3
        flags(9)        = 3
        flags(1)        = 2
        flags(2)        = 3
        flags(3)        = 4
        wflags(1)       = 0.3
        wflags(2)       = 0.3
        wflags(3)       = 0.4
        mxnest          = 4
        tol             = 13*0.01d0
        amr_wavefilter  = 1.0d-4
        nxlone1         = 60
        nxlone2         = 60
        xprobmin1       =-0.5d0
        xprobmax1       = 0.5d0
        xprobmin2       =-0.5d0
        xprobmax2       = 0.5d0
        iprob           = 2
/

 &paramlist
       slowsteps        = 10
       courantpar       = 0.6d0
       dtdiffpar        = 0.5d0
/
