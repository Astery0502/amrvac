 &filelist
        primnames    = 'rho'
    	convert_type = 'vtiCCmpi'
        autoconvert  = T
	base_filename  = 'rk54_cfl08_mp5_2048_'
	/
 &savelist
        itsave(1,1)  = 0
        itsave(1,2)  = 0
        ditsave(1)   = 1
 /

 &stoplist
        time_max         = 10.0d0
 /

 &methodlist
        w_names=       'rho'
        time_integrator=  'ssprk54'
        flux_scheme =    20*'fd'
        typepred1 =    20*'fd'
        typelow1  =    20*'fd'
        limiter= 20*'mp5'
        typelimited='predictor'
 /

 &boundlist
        nghostcells=   3
        typeB=  'periodic','periodic'
 /

 &meshlist
        refine_max_level=1
        domain_nx1=2048
        iprob=1
        xprobmin1=0.0d0
        xprobmax1=1.0d0
 /

 &paramlist
       courantpar=0.6
 /
