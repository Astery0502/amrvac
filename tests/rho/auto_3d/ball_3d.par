!=====================================================
!> Project : Advection test
!>   Doing discontinuous 3D ball on periodic cube
!>      exploit dynamic AMR, multi-step ssprk43 scheme, 
!>              conservative finite difference scheme,
!>              mp5 limiter (hence 3 ghost cell layers)
!>              CFL 0.6 ok (CFL 0.9 unstable!)
!> $AMRVAC_DIR/setup.pl -d=33 -p=rho
!=====================================================

 &filelist
        base_filename='ball_3d'
        typefilelog='regression_test'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        dtsave(1)=1.0d-2
        dtsave(2)=1.0d-2
 /

 &stoplist
        time_max=0.1d0
 /

 &methodlist
        w_names=       'rho'
        fileheadout=  'ball_3d'
 /

 &boundlist
        nghostcells=   3
        typeB=  'periodic','periodic','periodic','periodic','periodic','periodic'
 /

 &meshlist
        refine_max_level=3
        refine_threshold=20*0.1d0
        block_nx1=10
        block_nx2=10
        block_nx3=10
        domain_nx1=20
        domain_nx2=20
        domain_nx3=20
        iprob=6
        xprobmin1=-0.5d0
        xprobmax1=0.5d0
        xprobmin2=-0.5d0
        xprobmax2=0.5d0
        xprobmin3=-0.5d0
        xprobmax3=0.5d0
 /

 &rho_list
        rho_v = 1.0, 1.0, 1.0
 /
