!=====================================================
!> Project : Advection test
!>   Doing discontinuous 2D VAC logo on periodic square
!>      exploit dynamic AMR and different schemes
!>
!> $AMRVAC_DIR/setup.pl -d=22 -p=rho
!=====================================================

 &filelist
        filenameout='vac_2d'
        filenamelog='vac_2d'
        typefilelog='regression_test'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/
 &savelist
        dtsave(1)=1.0d-2
 /

 &stoplist
        tmax=0.1d0
 /

 &methodlist
        wnames=       'rho'
        fileheadout=  'vac_2d'
 /

 &boundlist
        dixB=   3
        typeB=  'periodic','periodic','periodic','periodic'
 /

 &amrlist
        mxnest=3
        tol=13*0.1d0
        ixGhi1=16
        ixGhi2=16
        nxlone1=50
        nxlone2=50
        iprob=3
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
       courantpar=0.90
 /

 &rho_list
        rho_v = 1.0, 1.0
 /
 