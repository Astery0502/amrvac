!=====================================================
!> Project : Advection test
!>   Doing discontinuous 2D VAC logo on periodic square
!>      exploit dynamic AMR and different schemes
!>
!> $AMRVAC_DIR/setup.pl -d=22 -p=rho
!=====================================================

 &filelist
        base_filename='vac_2d'
        typefilelog='regression_test'
        primnames='rho'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/
 &savelist
        dtsave(1)=1.0d-2
 /

 &stoplist
        time_max=0.1d0
 /

 &methodlist
        w_names=       'rho'
 /

 &boundlist
        nghostcells=   3
        typeB=  'periodic','periodic','periodic','periodic'
 /

 &meshlist
        refine_max_level=3
        refine_threshold=20*0.1d0
        block_nx1=10
        block_nx2=10
        domain_nx1=50
        domain_nx2=50
        iprob=3
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0
 /

 &paramlist
       courantpar=0.90
 /

 &rho_list
        rho_v = 1.0, 1.0
 /
 
