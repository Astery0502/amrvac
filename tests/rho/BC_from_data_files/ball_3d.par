&filelist
        base_filename='data/ball_3d'
        typefilelog='regression_test'
    	convert_type='vtuBCCmpi'
        autoconvert=T
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=1.0d-2
        dtsave_dat=1.0d0
 /

 &stoplist
        time_max=25.d0
 /

 &methodlist
        fixprocess=.true.
 /

 &boundlist
        nghostcells=   3
        typeboundary_min1 = 'special'
        typeboundary_max1 = 'noinflow'
        typeboundary_min2 = 'periodic'
        typeboundary_max2 = 'periodic'
        typeboundary_min3 = 'periodic'
        typeboundary_max3 = 'periodic'
 /

 &meshlist
        refine_max_level=2
        refine_threshold=20*0.1d0
        block_nx1=10
        block_nx2=10
        block_nx3=10
        domain_nx1=20
        domain_nx2=20
        domain_nx3=20
        xprobmin1=-0.5d0
        xprobmax1=0.5d0
        xprobmin2=-0.5d0
        xprobmax2=0.5d0
        xprobmin3=-0.5d0
        xprobmax3=0.5d0
 /

 &rho_list
        rho_v = 1.0, 0.0, 0.0
 /
